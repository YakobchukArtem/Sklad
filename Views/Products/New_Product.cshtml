@model Sklad.Models.Product
@{
}
<form method="POST" action="/Products/Edit">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Name</label>
        <div class="col-sm-6">
            <input type="text" class="form-control form__field" name="name" value="@(Model != null ? Model.name : "")" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Category</label>
        <div class="col-sm-6">
            <input type="text" class="form-control form__field" name="category" value="@(Model != null ? Model.category : "")" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Producer</label>
        <div class="col-sm-6">
            <input type="text" class="form-control form__field" name="producer" value="@(Model != null ? Model.producer : "")" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Price</label>
        <div class="col-sm-6">
            <input type="text" class="form-control form__field" name="price" value="@(Model != null ? Model.price : "")" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Count</label>
        <div class="col-sm-6">
            <input type="text" class="form-control form__field" name="count" value="@(Model != null ? Model.count : "")" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Supplier</label>
        <div class="col-sm-6">
            <input type="text" class="form-control form__field" name="supplier" value="@(Model != null ? Model.supplier : "")" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Measurement Unit</label>
        <div class="col-sm-6">
            <input type="text" class="form-control form__field" name="measurement_unit" value="@(Model != null ? Model.measurement_unit : "")" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Price Unit</label>
        <div class="col-sm-6">
            <input type="text" class="form-control form__field" name="price_unit" value="@(Model != null ? Model.price_unit : "")" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Image</label>
        <div class="col-sm-6" style="    display: -webkit-inline-box;">
            <input id="img1" type="file" class="form-control form__field" style="font-size:15px;padding-left: 25px;    width: 350px;" />
            <a class="btn btn-danger btn-sm delete-btn2" id="deleteimg" href="#" style=" display:none;"><i class="fas fa-trash-alt"></i></a>
            <input id="img2" type="text" style="display:none;" class="form-control form__field" name="image" value="@(Model != null ? Model.image : "")" />
        </div>
    </div>
    <div class="row mb-3">
        <div class=" offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
       
    </div>
</form>